{
  "compilerOptions": {
    "baseUrl": ".",
    "forceConsistentCasingInFileNames": true,
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "es2017"],
    "module": "esnext",
    "moduleResolution": "node",
    "paths": {
      "@Assets/*": ["src/assets/*"],
      "@Components/*": ["src/components/*"],
      "@Utils/*": ["src/utils/*"],
      "@Hooks/*": ["src/hooks/*"],
      "@UI/*": ["src/ui/*"],
      "@Configs/*": ["src/configs/*"],
      "@Service/*": ["src/service/*"],
      "@Redux/*": ["src/redux/*"]
    },
    "strict": true,
    "target": "es2017"
  },
  "exclude": ["node_modules", ".next"],
  "include": ["src/**/*"]
}
